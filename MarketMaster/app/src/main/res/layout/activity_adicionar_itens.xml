<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.unb.cic.mp.marketmaster.AdicionarItensActivity">

    <TextView
        android:id="@+id/escolha_um_item_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha um item cadastrado:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/itens_disp"
        app:layout_constraintStart_toStartOf="@id/guideline_txt" />

    <Spinner
        android:id="@+id/itens_disp"
        android:textColor="#000000"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/add_item"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/escolha_um_item_txt" />

    <Button
        android:id="@+id/add_item"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Adicionar"
        app:layout_constraintBottom_toTopOf="@id/cria_item"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/itens_disp" />

    <Button
        android:id="@+id/cria_item"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Criar item novo"
        app:layout_constraintBottom_toTopOf="@id/voltar"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/add_item" />

    <Button
        android:id="@+id/voltar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/cria_item" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0800" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0500" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9500" />

</android.support.constraint.ConstraintLayout>
